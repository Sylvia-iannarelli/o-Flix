{% extends 'back/layout.html.twig' %}

{% block title %}Liste des acteurs{% endblock %}

{% block subBody %}
    <h1>Liste</h1>

    <a class="btn btn-primary fw-bold" href="{{ path('app_back_person_new') }}">Créer un acteur</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.firstname }}</td>
                <td>{{ person.lastname }}</td>
                <td>
                    <div class="justify-content-center d-flex flex-nowrap gap-3">
                        <a class="btn btn-success btn-lg" href="{{ path('app_back_person_show', {'id': person.id}) }}"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-warning btn-lg" href="{{ path('app_back_person_edit', {'id': person.id}) }}"><i class="bi bi-pencil"></i></a>
                        {{ include('back/person/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
