{% extends 'back/layout.html.twig' %}

{% block title %}Saison{% endblock %}

{% block subBody %}
    <h1>Saison</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ season.movie.type }}</th>
                <td>{{ season.movie }}</td>
            </tr>
            <tr>
                <th>Saison numéro :</th>
                <td>{{ season.numberSeason }}</td>
            </tr>
            <tr>
                <th>Nombre d'épisodes dans la saison</th>
                <td>{{ season.numberEpisode }}</td>
            </tr>
        </tbody>
    </table>

    <div class="justify-content-center d-flex flex-nowrap gap-3">
        <a class="btn btn-success btn-lg" href="{{ path('app_back_season_index') }}"><i class="bi bi-box-arrow-left"></i></a>

        <a class="btn btn-warning btn-lg" href="{{ path('app_back_season_edit', {'id': season.id}) }}"><i class="bi bi-pencil"></i></a>

        {{ include('back/season/_delete_form.html.twig') }}
    </div>    

{% endblock %}
