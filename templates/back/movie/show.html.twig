{% extends 'back/layout.html.twig' %}

{% block title %}Film / Série{% endblock %}

{% block subBody %}
    <h1>Film / Série</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ movie.poster }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ movie.rating }}</td>
            </tr>
            
            <tr>
                <th>Genre(s)</th>
                <td>{% for genre in movie.genres %}
                <span class="badge bg-warning text-dark">{{genre.name}}</span>
            {% endfor %}</td>
            </tr>

        </tbody>
    </table>

    <div class="justify-content-center d-flex flex-nowrap gap-3">
        <a class="btn btn-success btn-lg" href="{{ path('app_back_movie_index') }}"><i class="bi bi-box-arrow-left"></i></a>

        <a class="btn btn-warning btn-lg" href="{{ path('app_back_movie_edit', {'id': movie.id}) }}"><i class="bi bi-pencil"></i></a>

        {{ include('back/movie/_delete_form.html.twig') }}
    </div>    

{% endblock %}
