{% extends 'back/layout.html.twig' %}

{% block title %}Liste des genres{% endblock %}

{% block subBody %}
    <h1>Liste</h1>

    <a class="btn btn-primary fw-bold" href="{{ path('app_back_genre_new') }}">Créer un genre</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>
                    <div class="justify-content-center d-flex flex-nowrap gap-3">
                        <a class="btn btn-success btn-lg" href="{{ path('app_back_genre_show', {'id': genre.id}) }}"><i class="bi bi-eye"></i></a>
                        <a class="btn btn-warning btn-lg" href="{{ path('app_back_genre_edit', {'id': genre.id}) }}"><i class="bi bi-pencil"></i></a>
                        {{ include('back/genre/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
